<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notifyLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="@drawable/grey_edittext">

    <CheckBox
        android:id="@+id/notifyCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/notify_checkbox_custom"
        android:button="@android:color/transparent"
        android:checked="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/notifyTitle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/notifyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Diary title"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@id/notifyDate"
        app:layout_constraintLeft_toRightOf="@id/notifyCheck"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5"
        tools:ignore="HardcodedText" />


    <TextView
        android:id="@+id/notifyDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:text="2020-11-10"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/notifyCheck"
        app:layout_constraintTop_toBottomOf="@id/notifyTitle"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/notifyTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:text="10:16"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/notifyDate"
        app:layout_constraintTop_toBottomOf="@id/notifyTitle"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>